{
  "env": {
    "node": true,
    "es2021": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-unused-vars": "warn",
    "no-console": "warn",
    "no-var": "error",
    "prefer-const": "error",
    "arrow-spacing": "error",
    "space-before-blocks": "error",
    "keyword-spacing": "error"
  },
  "ignorePatterns": [
    "node_modules/",
    "build/",
    "dist/",
    "coverage/",
    "*.min.js"
  ]
}
